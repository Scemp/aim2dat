&GLOBAL
  PROJECT aiida
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      A 0.000 2.692 2.692 
      B 2.692 0.000 2.692 
      C 2.692 2.692 0.000 
      PERIODIC XYZ
    &END CELL
    &COORD
      Si 0.000 0.000 0.000
      Si 1.346 1.346 1.346
    &END COORD
    &KIND Si
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
  &DFT
    UKS .TRUE.

    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      NGRIDS 4
      CUTOFF 200
      REL_CUTOFF 50
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      ADDED_MOS 8

      SCF_GUESS RESTART
      MAX_SCF 150
      EPS_SCF 1.0E-4
      &MIXING T
        METHOD BROYDEN_MIXING
        NBUFFER 20
        ALPHA 0.3
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &MO
        EIGENVALUES .TRUE.
        &EACH
          QS_SCF 1000
        &END EACH
      &END MO
    &END PRINT
  &END DFT
&END FORCE_EVAL

