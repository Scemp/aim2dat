&GLOBAL
  PROJECT aiida
  RUN_TYPE CELL_OPT
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &SUBSYS
    &CELL
      A 0.0 4.6753811 4.6753811 
      B 4.6753811 0.0 4.6753811
      C 4.6753811 4.6753811 0.0
      PERIODIC XYZ
    &END CELL
    &COORD
    Cs       2.33769055       2.33769055       2.33769055         
    Cs       7.01307165       7.01307165       7.01307165         
    Cs       4.67538110       4.67538110       4.67538110         
    Sb       0.00000000       0.00000000       0.00000000        
    &END COORD
    &KIND Cs
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q9
    &END KIND
    &KIND Sb
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      NGRIDS 4
      CUTOFF 200
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      SCF_GUESS RESTART
      MAX_SCF 150
      EPS_SCF 1.0E-4
      &MIXING T
        METHOD BROYDEN_MIXING
        NBUFFER 20
        ALPHA 0.3
      &END MIXING
    &END SCF
    &KPOINTS
      SCHEME MONKHORST-PACK 4 4 4
    &END KPOINTS
    &XC
      &XC_FUNCTIONAL
        &PBE
        &END
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
&END FORCE_EVAL
&MOTION
  &CELL_OPT
    OPTIMIZER BFGS
    MAX_FORCE 1.0E-2
    MAX_DR 1.0E-2
    RMS_DR 1.0E-2
    RMS_FORCE 5.0E-2
    PRESSURE_TOLERANCE 100.0
    TYPE DIRECT_CELL_OPT
  &END
&END


