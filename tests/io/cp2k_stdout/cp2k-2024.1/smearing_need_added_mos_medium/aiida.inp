&GLOBAL
  PROJECT aiida
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      ABC 2.950 2.950 2.950
      ALPHA_BETA_GAMMA 60.0 60.0 60.0 
      PERIODIC XYZ
    &END CELL
    &COORD
      Au 0.000 0.000 0.000
    &END COORD
    &KIND Au
      BASIS_SET DZVP-MOLOPT-SR-GTH-q11
      POTENTIAL GTH-PBE-q11
    &END KIND
  &END SUBSYS
  &DFT

    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      NGRIDS 4
      CUTOFF 400
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
    &END
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      ADDED_MOS 0

      SCF_GUESS RESTART
      MAX_SCF 150
      EPS_SCF 1.0E-6
      &MIXING T
        METHOD BROYDEN_MIXING
        NBUFFER 20
        ALPHA 0.3
      &END MIXING

      &SMEAR
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE 300
      &END SMEAR
    &END SCF
    &KPOINTS
      SCHEME MONKHORST-PACK 2 2 2
      PARALLEL_GROUP_SIZE 0
    &END KPOINTS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
&END FORCE_EVAL


