&GLOBAL
  PROJECT TiO2-bulk-bands
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      A 4.653 0.0   0.0 
      B 0.0   4.653 0.0 
      C 0.0   0.0   2.969
      PERIODIC XYZ
    &END CELL
    &COORD
      Ti 0.0000    0.0000    0.0000
      Ti 2.3265    2.3265    1.4845
      O  0.9091962 3.7438038 1.4845
      O  3.7438038 0.9091962 1.4845
      O  3.2356962 3.2356962 0.0000
      O  1.4173038 1.4173038 0.0000
    &END COORD
    &KIND Ti
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
  &DFT
    UKS .TRUE.

    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      NGRIDS 5
      CUTOFF 200
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      SCF_GUESS RESTART
      MAX_SCF 150
      EPS_SCF 1.0E-4
      &MIXING T
        METHOD BROYDEN_MIXING
        NBUFFER 20
        ALPHA 0.1
      &END MIXING
    &END SCF
    &KPOINTS
      SCHEME MONKHORST-PACK 2 2 3
    &END KPOINTS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &BAND_STRUCTURE
        ADDED_MOS 10
        &KPOINT_SET
               UNITS B_VECTOR
               SPECIAL_POINT GAMMA 0.0   0.0  0.0   #Gamma
               SPECIAL_POINT X     0.0   0.5  0.0   #X
               NPOINTS 6
        &END KPOINT_SET
        &KPOINT_SET
               UNITS B_VECTOR
               SPECIAL_POINT X 0.0   0.5  0.0   #X
               SPECIAL_POINT M 0.5   0.5  0.0   #M
               NPOINTS 6
        &END KPOINT_SET
        &KPOINT_SET
               UNITS B_VECTOR
               SPECIAL_POINT M     0.5   0.5  0.0   #M
               SPECIAL_POINT GAMMA 0.0   0.0  0.0   #Gamma
               NPOINTS 8
        &END KPOINT_SET
      &END BAND_STRUCTURE
    &END PRINT
  &END DFT
&END FORCE_EVAL


